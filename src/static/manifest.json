{
    "manifest_version": 3,
    "name": "Captioner",
    "version": "0.0.1",
    "description": "Get subtitles/captions for any video/audio being played.",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "action.html"
    },
    "icons": {
        "16": "logo.png",
        "32": "logo.png",
        "48": "logo.png",
        "128": "logo.png",
        "256": "logo.png"
    },
    "permissions": ["activeTab", "scripting"]
}